{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "sourceRoot": "apps/api/src",
      "entryFile": "main",
      "compilerOptions": { "tsConfigPath": "apps/api/tsconfig.app.json" }
    },
    "post-signup-service": {
      "type": "application",
      "root": "apps/post-signup-service",
      "entryFile": "handler",
      "sourceRoot": "apps/post-signup-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/post-signup-service/tsconfig.app.json"
      }
    },
    "pre-token-generation": {
      "type": "application",
      "root": "apps/pre-token-generation",
      "entryFile": "handler",
      "sourceRoot": "apps/pre-token-generation/src",
      "compilerOptions": {
        "tsConfigPath": "apps/pre-token-generation/tsconfig.app.json"
      }
    },

    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}
