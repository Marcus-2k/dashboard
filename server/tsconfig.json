{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@dto/*": ["apps/api/src/dto/*"],
      "@shared/*": ["apps/api/src/shared/*"],
      "@use-cases/*": ["apps/api/src/use-cases/*"],

      "database/database": ["libs/database/src"],
      "database/database/*": ["libs/database/src/*"]
    }
  }
}
